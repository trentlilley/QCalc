<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QCalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Number_Buttons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/number_buttons</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Op_Buttons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/operator_buttons</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Clear_Buttons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/clear_buttons</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Landscape_Buttons" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
</resources>